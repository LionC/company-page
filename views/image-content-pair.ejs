<section class="img-text-pair">
    <%
    var sliceGroup = slice.value.toArray()[0];
    var image = sliceGroup.getImage('image');
    var content = sliceGroup.getStructuredText('content-' + lang);
    %>
    <img src="<%= image.url %>" alt="<%= image.asText() %>">
    <div>
        <%- content.asHtml() %>
    </div>
</section>
